# .env.example - Template for environment variables
# Copy this file to .env and fill in your values

# Execution Mode
DRY_RUN=true  # Set to false for production

# Logging Configuration
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR

# Orchestrator Configuration
POLL_INTERVAL=5  # Seconds between task queue checks
MAX_RETRIES=3  # Maximum retry attempts for failed tasks

# Credential Rotation Reminder
# Rotate all credentials monthly for security

# ============================================
# SILVER TIER CONFIGURATION
# ============================================

# System Configuration
DRY_RUN=true  # Set to false for production

# Gmail Configuration
EMAIL_PROVIDER=gmail
EMAIL_FROM=your-email@gmail.com
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password  # Use App Password, not regular password

# LinkedIn Configuration
LINKEDIN_EMAIL=your-linkedin-email@example.com
LINKEDIN_PASSWORD=your-linkedin-password
LINKEDIN_API_MODE=selenium  # or 'api' if you have API access

# WhatsApp Configuration
WHATSAPP_ENABLED=false  # Set to true to enable WhatsApp watcher
WHATSAPP_SESSION_PATH=.wwebjs_auth
WHATSAPP_BRIDGE_PORT=5002
WHATSAPP_BRIDGE_URL=http://localhost:5002

# MCP Server Configuration
MCP_EMAIL_PORT=5000
MCP_LINKEDIN_PORT=5001

# Scheduling Configuration
WATCHER_INTERVAL_MINUTES=10
REASONING_LOOP_INTERVAL_MINUTES=10
LINKEDIN_POST_DAY=sunday
LINKEDIN_POST_HOUR=9
DASHBOARD_UPDATE_HOUR=8

# Approval Configuration
APPROVAL_TIMEOUT_HOURS=24
